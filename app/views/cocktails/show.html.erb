<div class="container" style="width: 90vw;">
  <!-- header -->
  <div class="card-category row" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= @cocktail.image %>)">
    <h1><%= @cocktail.name  %></h1>
  </div>
  <div class="row" style="margin: .4rem;">

    <!-- description -->



    <!-- ingredients -->
    <% @cocktail.doses.each do |dose| %>
      <div class="dose-info">
        <%= dose.description%> <%= dose.ingredient.name %>
        <%= link_to dose_path(dose),
                method: :delete,
                data: { confirm: "Are you sure?" } do%>
          <i class="fas fa-trash"></i>
      <% end %>
    <% end %>
      <br>
      <%= link_to new_cocktail_dose_path(@cocktail, @dose)%>
      <br>
      <%= link_to "Edit this cocktail", edit_cocktail_path(@cocktail) %>
      <br>
      <%= link_to "Delete this cocktail",
              cocktail_path(@cocktail),
              method: :delete,
              data: { confirm: "Are you sure?" } %>
      </div>
  </div>
</div>
